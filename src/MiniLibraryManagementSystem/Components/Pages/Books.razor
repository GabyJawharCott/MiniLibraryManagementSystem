@page "/books"
@rendermode InteractiveServer
@attribute [Authorize]
@inject IBookService BookService
@inject ILoanService LoanService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Books</PageTitle>

<h1>Books</h1>

@if (_loading)
{
    <p>Loadingâ€¦</p>
}
else if (_error is { Length: > 0 })
{
    <div class="alert alert-danger">@_error</div>
}
else
{
    <p class="mb-3">
        @if (_isStaff)
        {
            <a href="/books/add" class="btn btn-primary me-2">Add book</a>
        }
        <a href="/search" class="btn btn-outline-secondary">Search</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Pages</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in _books)
            {
                <tr>
                    <td>@b.Title</td>
                    <td>@b.Author</td>
                    <td>@b.GenreName</td>
                    <td>@b.PageCount</td>
                    <td>@b.Status</td>
                    <td>
                        <a href="/books/view/@b.Id" class="btn btn-sm btn-outline-primary me-1">View</a>
                        @if (b.Status == "Available")
                        {
                            <button type="button" class="btn btn-sm btn-success me-1" disabled="@_borrowingId.HasValue" @onclick="() => BorrowAsync(b.Id)">Borrow</button>
                        }
                        @if (_isStaff)
                        {
                            <a href="/books/edit/@b.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                            <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => _bookToDelete = b">Delete</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    if (_books.Count == 0)
    {
        <p class="text-muted">No books yet. Add one to get started.</p>
    }
    @if (_bookToDelete is not null)
    {
        <div class="alert alert-warning mt-3 d-flex align-items-center gap-2 flex-wrap">
            <span>Delete &quot;@_bookToDelete.Title&quot;? This will remove it from the list.</span>
            <button type="button" class="btn btn-sm btn-danger" @onclick="ConfirmDelete">Confirm</button>
            <button type="button" class="btn btn-sm btn-secondary" @onclick="() => _bookToDelete = null">Cancel</button>
        </div>
    }
}

@code {
    private List<BookDto> _books = new();
    private bool _loading = true;
    private string _error = "";
    private bool _isStaff;
    private BookDto? _bookToDelete;
    private int? _borrowingId;

    private async Task BorrowAsync(int bookId)
    {
        _borrowingId = bookId;
        _error = "";
        try
        {
            var (success, err) = await LoanService.CheckOutAsync(bookId);
            if (success)
            {
                _books = await BookService.GetBooksAsync() ?? new();
            }
            else
                _error = err ?? "Could not borrow book.";
        }
        finally
        {
            _borrowingId = null;
            StateHasChanged();
        }
    }

    private async Task ConfirmDelete()
    {
        if (_bookToDelete is null) return;
        var id = _bookToDelete.Id;
        _bookToDelete = null;
        var (success, err) = await BookService.DeleteBookAsync(id);
        if (success)
        {
            _error = "";
            _books = await BookService.GetBooksAsync() ?? new();
        }
        else
            _error = err ?? "Delete failed.";
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        try
        {
            var state = await AuthStateProvider.GetAuthenticationStateAsync();
            _isStaff = state.User?.IsInRole("Admin") == true || state.User?.IsInRole("Librarian") == true;
            _books = await BookService.GetBooksAsync() ?? new();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
            StateHasChanged();
        }
    }
}
