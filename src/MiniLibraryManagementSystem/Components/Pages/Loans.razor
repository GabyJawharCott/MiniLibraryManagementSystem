@page "/loans"
@rendermode InteractiveServer
@attribute [Authorize]
@inject ILoanService LoanService
@inject NavigationManager Navigation

<PageTitle>Loans</PageTitle>

<h1>Loans</h1>

@if (_loading)
{
    <p>Loading…</p>
}
else if (_error is { Length: > 0 })
{
    <div class="alert alert-warning">@_error</div>
    <a href="/books" class="btn btn-outline-secondary">Browse books</a>
}
else
{
    <AuthorizeView Roles="Admin,Librarian">
        <Authorized>
            <p class="text-muted mb-2">You see all loans. Members see only their own.</p>
        </Authorized>
    </AuthorizeView>
    <div class="mb-3">
        <button class="btn @(_activeOnly ? "btn-outline-primary" : "btn-primary")" @onclick="ToggleActive">@(_activeOnly ? "Show all loans" : "Current only")</button>
        <a href="/books" class="btn btn-outline-secondary ms-2">Browse books</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book</th>
                <th>Borrower</th>
                <th>Borrowed</th>
                <th>Due</th>
                <th>Returned</th>
                <AuthorizeView Roles="Admin,Librarian">
                    <Authorized>
                        <th></th>
                    </Authorized>
                </AuthorizeView>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in _loans)
            {
                <tr class="@(l.ReturnedAt == null && l.DueDate < DateTime.UtcNow ? "table-warning" : "")">
                    <td>@l.BookTitle</td>
                    <td>@l.UserEmail</td>
                    <td>@l.BorrowedAt.ToString("yyyy-MM-dd")</td>
                    <td>@l.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>@(l.ReturnedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <AuthorizeView Roles="Admin,Librarian">
                        <Authorized>
                            <td>
                                @if (l.ReturnedAt == null)
                                {
                                    <button type="button" class="btn btn-sm btn-success" disabled="@_checkingInId.HasValue" @onclick="() => CheckInAsync(l.Id)">Check-in</button>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                        </Authorized>
                    </AuthorizeView>
                </tr>
            }
        </tbody>
    </table>
    if (_loans.Count == 0)
    {
        <p class="text-muted">No loans.</p>
    }
}

@code {
    private List<LoanDto> _loans = new();
    private bool _loading = true;
    private bool _activeOnly = true;
    private string _error = "";
    private int? _checkingInId;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _loading = true;
        _error = "";
        try
        {
            _loans = await LoanService.GetLoansAsync(_activeOnly);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task ToggleActive()
    {
        _activeOnly = !_activeOnly;
        await LoadAsync();
    }

    private async Task CheckInAsync(int loanId)
    {
        _checkingInId = loanId;
        _error = "";
        try
        {
            var (success, err) = await LoanService.CheckInAsync(loanId);
            if (success)
                await LoadAsync();
            else
                _error = err ?? "Check-in failed.";
        }
        finally
        {
            _checkingInId = null;
        }
    }
}
