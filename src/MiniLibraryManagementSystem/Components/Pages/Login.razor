@page "/login"
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Login</PageTitle>

<div class="container mt-5" style="max-width: 400px;">
    <h1 class="mb-4">Sign in</h1>
    @if (Message is { Length: > 0 })
    {
        <div class="alert alert-warning">@Message</div>
    }
    <p class="text-muted mb-3">Use your Google or Microsoft account to sign in.</p>
    <div class="d-flex flex-column gap-2">
        <a href="Account/ExternalLogin?provider=Google" class="btn btn-outline-danger">Sign in with Google</a>
        <a href="Account/ExternalLogin?provider=Microsoft" class="btn btn-outline-primary">Sign in with Microsoft</a>
    </div>
    <p class="mt-3 small text-muted">
        <a href="/">Back to home</a>
    </p>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Message { get; set; }
}
