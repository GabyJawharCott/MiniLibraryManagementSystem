@page "/search"
@rendermode InteractiveServer
@attribute [Authorize]
@inject ISearchService SearchService

<PageTitle>Search books</PageTitle>

<h1>Search books</h1>

<form class="row mb-4" @onsubmit="SearchAsync" @onsubmit:preventDefault>
    <div class="col-md-4 mb-2">
        <label class="form-label">Text</label>
        <input type="text" class="form-control" @bind="_q" @bind:event="oninput" placeholder="Title or author" />
    </div>
    <div class="col-md-2 mb-2">
        <label class="form-label">Genre</label>
        <select class="form-select" @bind="_genreId" @bind:after="SearchAsync">
            <option value="0">All</option>
            @foreach (var g in _genres)
            {
                <option value="@g.Id">@g.Name</option>
            }
        </select>
    </div>
    <div class="col-md-2 mb-2">
        <label class="form-label">Level</label>
        <select class="form-select" @bind="_level">
            <option value="">All</option>
            @foreach (var l in _levels)
            {
                <option value="@l">@l</option>
            }
        </select>
    </div>
    <div class="col-md-2 mb-2">
        <label class="form-label">Min pages</label>
        <input type="number" class="form-control" @bind="_minPages" placeholder="Min" />
    </div>
    <div class="col-md-2 mb-2">
        <label class="form-label">Max pages</label>
        <input type="number" class="form-control" @bind="_maxPages" placeholder="Max" />
    </div>
    <div class="col-md-2 d-flex align-items-end mb-2">
        <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
</form>

@if (_loading)
{
    <p>Loadingâ€¦</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Pages</th>
                <th>Reading time</th>
                <th>Ease</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in _results)
            {
                <tr>
                    <td>@b.Title</td>
                    <td>@b.Author</td>
                    <td>@b.GenreName</td>
                    <td>@b.PageCount</td>
                    <td>@(b.EstimatedReadingMinutes.HasValue ? b.EstimatedReadingMinutes + " min" : "-")</td>
                    <td>@(b.EaseOfReading ?? "-")</td>
                    <td><a href="/books/edit/@b.Id" class="btn btn-sm btn-outline-primary">View</a></td>
                </tr>
            }
        </tbody>
    </table>
    if (_searched && _results.Count == 0)
    {
        <p class="text-muted">No books match your search.</p>
    }
}

@code {
    private static readonly string[] _levels = { "Easy", "Medium", "Hard" };

    private string _q = "";
    private int _genreId;
    private string? _level;
    private int? _minPages;
    private int? _maxPages;
    private List<BookDto> _results = new();
    private List<GenreOption> _genres = new();
    private bool _loading;
    private bool _searched;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        var list = await SearchService.GetGenresAsync();
        _genres = list ?? new();
        await SearchAsync();
        StateHasChanged();
    }

    private async Task SearchAsync()
    {
        _loading = true;
        _searched = true;
        try
        {
            _results = await SearchService.SearchAsync(_q, null, _minPages, _maxPages, _genreId > 0 ? _genreId : null, _level) ?? new();
        }
        finally
        {
            _loading = false;
        }
    }
}
